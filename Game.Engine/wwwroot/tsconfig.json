{
    "compilerOptions": {
        "lib": ["DOM", "ESNext", "DOM.Iterable", "ScriptHost"],
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "esnext",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "target": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
    },
    "include": [
        "src"
    ]
}